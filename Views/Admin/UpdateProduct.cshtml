@model Book_kharido.Models.Product

@{
    ViewData["Title"] = "UpdateProduct";
}

<partial name="_Partail_Admin" />

        <div class="col-lg-9 col-12 col-lg-9 my-3">
    <div class="table-container px-5">
            <h5>Edit Product</h5>
            <form asp-action="UpdateProduct" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />
                <div class="row">
                    <div class="col-6">
                        <label for="">Book Name</label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label for="">Category</label>
                        <select asp-for="ProductCategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.ProductCategoryName,"Value","Text"))">
                            <option>Select a Categories</option>
                        </select>
                        <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label for="">Writer</label>
                        <select asp-for="WriterID" class="form-control" asp-items="@(new SelectList(ViewBag.WriterName,"Value","Text"))">
                            <option>Select a Categories</option>
                        </select>
                        <span asp-validation-for="WriterID" class="text-danger"></span>

                    </div>
                    <div class="col-6">
                        <label for="">Publisher</label>
                        <select asp-for="PublisherID" class="form-control" asp-items="@(new SelectList(ViewBag.PublisherName,"Value","Text"))">
                            <option value="">Select a Publisher</option>
                        </select>
                        <span asp-validation-for="PublisherID" class="text-danger"></span>

                    </div>
                    <div class="col-6">
                        <label for="">Page</label>
                        <input asp-for="Page" min="10" class="form-control" />
                        <span asp-validation-for="Page" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label for="">Person of Discount</label>
                        <input asp-for="ProductDiscount" min="1" max="99" class="form-control" />
                        <span asp-validation-for="ProductDiscount" class="text-danger"></span>

                    </div>
                    <div class="col-6">
                        <label for="">Price</label>
                        <input asp-for="ProductPrice" min="1" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>

                    <div class="col-6">
                        <label for="">Quantity</label>
                        <input asp-for="ProductQuantity" min="10" max="100" class="form-control" />
                        <span asp-validation-for="ProductQuantity" class="text-danger"></span>

                    </div>

                    <div class="col-6">
                        <label for="">Image</label>
                        <input asp-for="ProductFile" type="file" class="form-control" id="fileInput1" />
                        <span asp-validation-for="ProductIamge" class="text-danger"></span>
                        <div>
                            <img height="200px" class="my-2" id="defaultImg" src="/@Html.DisplayFor(model => model.ProductIamge)
" alt="Default Image" width="100px">
                            <img height="200px" class="my-2" id="previewImg1" src="#" alt="Preview Image" width="100px">
                        </div>

                        <!-- JavaScript -->
                        <script>
                            const fileInput1 = document.getElementById('fileInput1');
                            const defaultImg = document.getElementById('defaultImg');
                            const previewImg1 = document.getElementById('previewImg1');

                            fileInput1.addEventListener('change', function () {
                                const file = this.files[0];
                                if (file) {
                                    const reader = new FileReader();
                                    reader.onload = function (e) {
                                        previewImg1.src = e.target.result;
                                    }
                                    reader.readAsDataURL(file);
                                } else {
                                    // If no file selected, display the default image
                                    previewImg1.src = defaultImg.src;
                                }
                            });
                        </script>


                    </div>
                    <div class="col-6">
                        <label for="description">Description</label>
                        <input asp-for="ProductDescription" class="form-control" />
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>

                    </div>


                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
