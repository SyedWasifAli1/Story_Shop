@model IEnumerable<Book_kharido.Models.Product>



<!-- Start Hero Section -->
<div class="hero">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>Shop</h1>
				</div>
			</div>
			<div class="col-lg-7">

			</div>
		</div>
	</div>
</div>
<!-- End Hero Section -->



<div class="untree_co-section product-section before-footer-section">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
				var divide = item.ProductPrice / 100;
				var dicount = item.ProductDiscount * divide;
				var result = item.ProductPrice - dicount;

				<div class="col-12 col-md-4 col-lg-3 mb-5">
					<a asp-action="Details" class="product-item" asp-route-id="@item.ProductId">

						<img src="/@item.ProductIamge" class="img-fluid product-thumbnail" alt="...">
						@* <span class="discount-tag">@item.ProductDiscount% off</span> *@

						@* <img src="~/assets/images/product-3.png" class="img-fluid product-thumbnail"> *@
						<h3 class="product-title"> @item.ProductName</h3>
						@* <strong class="product-price">$50.00</strong> *@
						<span class="product-price">
							<b>Pkr:@result</b>  <sup class="sup">
								<del>@item.ProductPrice</del>
							</sup>
						</span>
						
					<span class="icon-cross">

						<img src="~/assets/images/cross.svg" class="img-fluid">


						</span>

					</a>

				</div>


			}

			
			
	
		
			

		</div>
	</div>
</div>
