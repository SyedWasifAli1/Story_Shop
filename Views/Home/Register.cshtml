@model Book_kharido.Models.User

@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 login-container ">
            <h2 class="text-center mb-4">Register</h2>
            <form asp-action="Register">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" type="text" class="form-control" id="username" placeholder="Enter username">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Address" value="none" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="PhoneNumber" value="0" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="CountryId" type="hidden" value="1" class="form-control" />

                </div>
                <div class="form-group">
                    <input asp-for="CityId" type="hidden" value="1" class="form-control" />

                </div>
                <div class="form-group">
                    <input asp-for="Roll" value="User" type="hidden" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="Picture" value="Not Picture" type="hidden" class="form-control" />
                </div>
                <button type="submit" class="btn form_button rounded-2 my-2 btn-block">Register</button> <br>
                <a asp-controller="Home" asp-action="Index">Login</a>
            </form>
        </div>
    </div>
</div>

